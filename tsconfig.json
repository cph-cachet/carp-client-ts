{
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "es2022",
    "lib": [
      "es2022"
    ],
    "esModuleInterop": true,
    "module": "CommonJS",
    "allowJs": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "src/env.d.ts",
    "tests/**/*"
  ]
}
