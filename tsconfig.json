{
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "es2022",
    "lib": [
      "es2022"
    ],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "module": "ESNext",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "outDir": "dist",
    "rootDir": "./src",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "sourceMap": true,
    "declaration": true,
  },
  "include": [
    "src",
    "src/env.d.ts",
    "src/test/**/*",
    "reporter.js",
    "eslint.config.mjs",
    ".prettierrc.js"
  ],
  "exclude": [
    "node_modules",
    "non_npm_dependencies",
    "dist",
    "coverage",
  ]
}