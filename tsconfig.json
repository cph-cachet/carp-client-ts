{
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "es2022",
    "lib": [
      "es2022"
    ],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "module": "ESNext",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "sourceMap": true
  },
  "include": [
    "src/**/*",
    "src/env.d.ts",
    "test/**/*",
    "reporter.js",
    "vitest.config.ts"
  ]
}