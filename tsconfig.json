{
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "es2022",
    "lib": [
      "es2022"
    ],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "module": "ESNext",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "outDir": "dist",
    "rootDir": "./src",
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "sourceMap": true
  },
  "include": [
    "src/**/*",
    "src/env.d.ts",
    "test/**/*",
  ],
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    "test/**/*.js",
    "test/**/*.ts",
  ]
}